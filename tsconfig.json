{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "declarationDir": "./dist/typings",
        "target": "es5",
        "outDir": "./dist",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "pretty": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "./src",
        "noEmitHelpers": true,
        "importHelpers": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "paths": {
            "*": [
                "./src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}